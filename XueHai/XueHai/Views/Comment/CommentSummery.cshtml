@model IEnumerable<XueHai.Models.ViewModel>

@if (Model.Count() == 0)
{
    <div>
        <h2>什么也没有</h2>
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="comment-show-con clearfix">
            <div class="comment-show-con-img pull-left">
                <img src="~/Images/header-img-comment_03.png" />
            </div>
            <div class="comment-show-con-list pull-left clearfix" data-id="@item.c.ComID">
                <div class="pl-text">
                    <a href="#" class="comment-size-name" data-user-id="@item.c.Users_id">@item.c.UserInfo.UserName</a>
                    <a href="#" title="尊贵会员"><em class="icon-member icon-member-l3 w-icon"></em></a>
                    <span class="my-pl-con">：@item.c.ComContent</span>
                </div>
                <div class="date-dz">
                    <span class="date-dz-left pull-left comment-time">@item.c.ComTime</span>
                    <div class="date-dz-right pull-right comment-pl-block">
                        <a href="javascript:;" class="removeBlock">删除</a>
                        <a href="javascript:;" class="hf-con-block pull-left hf-a" data-type="1">回复</a>
                        <span class="pull-left date-dz-line">|</span>
                        @if (item.PraStatus == 1)
                        {
                            <a href="javascript:;" title="取消赞" class="date-dz-z pull-left">
                                <span class="UI_ani_praised">
                                    <i class="praised"></i>
                                    <em class="num">@item.c.PaiseNum</em>
                                </span>
                            </a>
                        }
                        else
                        {
                            <a href="javascript:;" title="赞" class="date-dz-z pull-left" data-id="@item.c.ComID">
                                <span class="noz">
                                    <i class="praised"></i>
                                    @if (item.c.PaiseNum == 0)
                                    {
                                        <em class="num">赞</em>
                                    }
                                    else
                                    {
                                        <em class="num">@item.c.PaiseNum</em>
                                    }
                                </span>
                            </a>
                        }

                    </div>
                    <div class="hf-con pull-left">
                        <div class="flex-text-wrap">
                            <textarea class="el-textarea__inner ko" rows="2" style="resize:none" maxlength="140"></textarea>
                            <div class="hf-btn-area">
                                <button class="hf-btn el-button el-button--success is-plain parent">
                                    <i class="el-icon-edit"></i>评论
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                @*回复区域*@
                
            </div>
        </div>
    }

}





