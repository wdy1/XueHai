@model Models.UserInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录页面</title>
    <script src="~/JS/jquery-1.7.2.js"></script>
    <script src="~/js/vcode.js"></script>
    <script src="~/js/wow.js"></script>
    <link href="~/content/animate.css" rel="stylesheet" />
    <link href="~/content/login1.css" rel="stylesheet" />
    <link href="~/content/wdy/alert.css" rel="stylesheet" />
</head>
<body>
    <div class="pop-cheat" id="info1">
        <h3>安全提醒</h3>
        <div class="pop_cheat_info clearfix1">
            <div>
                <span class="right">
                    "学海平台"
                    <b>不会以任何理由，要求您点击任何网址链接进行退款或支付操作。</b>
                    "学海客服电话400-106-6666，0527-80878888。"
                </span>
            </div>
        </div>
        <div class="btn">
            <a id="hide1" href="javascript:void(0)">知道了</a>
        </div>
    </div>
    <div class="wrap">
        <div class="wrap-nav">
            <div class="nav">
                <div class="nav-left">
                    <a href="Login.html"><img src="~/images/logo.jpg"></a>
                </div>
                <div class="nav-right">  
                    <a href="###" target="_blank">
                        <span class="icon"></span>       
                        "登录页面"改进建议
                    </a>
                </div>
            </div> 
        </div> 
        <div class="login-bg">
            <div class="login">
                <div class="login-left">
                    <div class="left-img">
                        <a href="##"><img src="~/images/login-bg.jpg" /></a>
                    </div>
                </div>
                <div class="login-right">
                    <div class="login-form wow bounceInRight">
                        <div class="info">
                            "       请勿设置与邮箱及其他网站相同的登录及支付密码，"
                            <a href="##">谨防诈骗</a>
                        </div>
                        <div class="userlogin">
                            <span>账号登录</span>
                        </div>
                        @using (Html.BeginForm("Login", "UserInfo", FormMethod.Post, new { id = "loginForm" }))
                        {
                            <div class="form">
                                <form action="" id="formlogin" method="post" onSubmit="return false;">
                                    <div class="item item-fore1 item-error">
                                        <label for="loginname" class="login-label name-label"></label>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "itxt", placeholder = "请输入用户名", id = "loginname", tabindex = "1", autocomplete = "off" })
                                        <span class="clear-btn" style="display:inline;"></span>
                                    </div>
                                    <!-- 密码输入框fore2 -->
                                    <div id="entry" class="item item-fore2" style="visibility: visible">
                                        <label class="login-label pwd-label" for="nloginpwd"></label>
                                        @Html.TextBoxFor(m => m.UserPass, new { @class = "itxt itxt-error", placeholder = "请输入密码", id = "nloginpwd", tabindex = "2", autocomplete = "off", type = "password" })
                                        <span class="clear-btn" style="display: inline;"></span>
                                        <span class="capslock" style="display: none;">
                                            <b></b>
                                            大小写锁定已打开
                                        </span>
                                    </div>
                                    <!-- 图片验证码开始 fore3-->
                                    <div id="o-authcode" class="item item-vcode item-fore3 hide ">
                                        <span class="input-group-addon"><i class="check-square"></i></span>
                                        <input type="text" id="code1" name="code1" class="itxt itxt02" tabindex="3" placeholder="输入验证码">
                                        <input type="text" id="help" name="help" class="help2"  style="display:none;" />
                                        <div id="vCode1" style="width:100px; height: 60px; border: 1px solid #ccc; display: inline-block; float:right;"></div>
                                    </div>
                                    <!-- 自动登录开始fore4 -->
                                    <div class="item item-fore4">
                                        <div class="safe">
                                            <input type="checkbox" name="chkRememberMe" id="autologin" tabindex="3">
                                            <span>
                                                <label>自动登录</label>
                                            </span>
                                            <span class="forget-pw-safe">
                                                <a href="">忘记密码</a>
                                            </span>
                                        </div>
                                    </div>
                                    <!-- 登录按钮开始 -->
                                    <div class="item item-fore5">
                                        <div class="login-btn">
                                            <a href="javascript:document.getElementById('loginForm').submit();" class="btn-img btn-entry" id="loginsubmit" tabindex="6">登&nbsp;&nbsp;&nbsp;&nbsp;录</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        }
                        <div class="coagent" id="kbCoagent">
                            <ul>
                                <li class="extra-r">
                                    <div class="regist-link">
                                        <a href="@Url.Action("Register","UserInfo")" class="">
                                            <b></b>立即注册
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>         
        <div class="w">
            <div id="footer-2013" class="content">
                <div class="links">
                    <a href="">关于我们</a>
                    |
                    <a href="">联系我们</a>
                    |
                    <a href="">人才招聘</a>
                    |
                    <a href="">商家入驻</a>
                    |
                    <a href="">广告服务</a>
                    |
                    <a href="">手机京东</a>
                    |
                    <a href="">友情链接</a>
                    |
                    <a href="">销售联盟</a>
                    |
                    <a href="">English site</a>
                </div>
                <div style="padding-left:10px">
                    <p style="padding-top:10px; padding-bottom:10px; color:#999">网络文化经营许可证：浙网文[2013]0268-027号| 增值电信业务经营许可证：浙B2-20080224-1</p>
                    <p style="padding-bottom:10px; color:#999">信息网络传播视听节目许可证：1109364号 | 互联网违法和不良信息举报电话:0571-81683755</p>
                </div>
            </div>
        </div>
    </div>
    <script>
        var info = document.getElementById("info1");
        console.log(info);
        var hide = document.getElementById("hide1");
        hide.onclick = function () {
            info.style.display = "none";
        }
    </script>
    <script type="text/javascript">
	    //确认输入用户名密码后，显示验证码
	    $("#nloginpwd").blur(function(){
		    if(($("#loginname").val() !="" )&&($("#nloginpwd").val() !="")){
		    $("#o-authcode").css({"display":"block"});
	    }
	    })
    </script>
    <script>
        if (!(/msie [6|7|8|9]/i.test(navigator.userAgent))){
	        new WOW().init();
        };
    </script>
    <script>
         onload = function () {
            var container1 = document.getElementById("vCode1");
            var help = document.getElementById("help");
            var code1 = new vCode(container1,4);
            document.getElementById("loginsubmit").addEventListener("click", function () {
                help.value = code1.verify(document.getElementById("code1").value);
            }, false);
         };
    </script>
</body>
</html>
